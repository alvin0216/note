{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2, // tab 2

  //   prettier 格式化配置
  "prettier.jsxBracketSameLine": true, // jsx 结尾的 > 不放在新的一行
  "prettier.printWidth": 100, // 长度 100 才换行
  "prettier.singleQuote": true, // 单引号
  "prettier.jsxSingleQuote": true,
  "prettier.arrowParens": "always", // 当参数只有一个的时候, 需要加上括号
  "prettier.semi": true, // 行尾需要有分号
  "prettier.trailingComma": "es5", // json 数组，对象尾随逗号
  "prettier.htmlWhitespaceSensitivity": "css", // 根据显示样式决定 html 要不要折行

  // vscode settings
  // 搜索忽略的目录 优化检索速度
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/dist": true
  },
  "tabnine.experimentalAutoImports": true,
  "workbench.iconTheme": "material-icon-theme",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "explorer.confirmDelete": false,
  "window.zoomLevel": -1,
  "diffEditor.ignoreTrimWhitespace": false,
  "explorer.confirmDragAndDrop": false
}

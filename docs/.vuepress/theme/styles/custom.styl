.page
  .theme-default-content
    line-height 1.8
    box-shadow: rgba(0, 0, 0, 0.05) 0px 10px 20px, rgba(0, 0, 0, 0.07) 0px 6px 6px

blockquote
  color #819198
  border-left 6px solid #dce6f0
  background #f2f7fb
  padding 0.25rem 0.25rem 0.25rem 1rem
  code 
    // color yellow !important

table
  font-size 14px
  thead tr
    background #87bae6
    line-height 2
  th, td
   padding .2em 1em

{$contentClass}
  background-color #fff
  code 
    color #f83929
    font-family Consolas,Monaco,'Andale Mono',monospace;

    .token
      &.deleted
        color #EC5975
      &.inserted
        color $accentColor 
  pre code 
    font-weight normal         

{$contentClass}

.custom-block
  &.details
    summary
      user-select none
      // color #ff5722
p
  padding-bottom 4px

strong 
  font-weight: 700

.orange
  color #fa8919
  font-weight bold

.flex-img 
  p
    display flex
    a:not(:last-child)
      margin-right 20px
    img
      border: 1px solid 


.theme-default-content      
 
  div[class*="language-"]
    font-size 92%
    // line-height: 1.45
    font-weight 400
    background-color #f6f8fa
    .highlight-lines
      line-height 1.38
    .highlight-lines .highlighted
      background-color #abefa8  
    // pre
      // padding 16px

    pre code
      font-family SFMono-Regular,Consolas,Liberation Mono,Menlo,monospace
      color #24292e
      .token.punctuation
        color #999
      .token.property, .token.tag, .token.boolean, .token.number, .token.constant, .token.symbol
        color #005cc5
      .token.selector, .token.attr-name, .token.string, .token.char, .token.builtin
        color #032f62
      .token.comment, .token.prolog, .token.doctype, .token.cdata
        color #6a737d;    
      .token.atrule, .token.attr-value, .token.keyword
        color #d73a49  
      .token.class-name
        color #e36209
      .token.operator, .token.entity, .token.url, .language-css .token.string, .token.variable, .token.inserted
        color #005cc5  
body {
  font-family "PingFang SC", "Lantinghei SC", "Microsoft Yahei", "Hiragino Sans GB", "Microsoft Sans Serif", "WenQuanYi Micro Hei", Helvetica, sans-serif
  color #444
  font-family "Arial,'Hiragino Sans GB',冬青黑,'Microsoft YaHei',微软雅黑,SimSun,宋体,Helvetica,Tahoma,'Arial sans-serif'"
}

.page
  .theme-default-content
    line-height 1.8
    box-shadow: rgba(0, 0, 0, 0.05) 0px 10px 20px, rgba(0, 0, 0, 0.07) 0px 6px 6px

blockquote
  color #819198
  border-left 6px solid #dce6f0
  background #f2f7fb

table
  font-size 14px
  thead tr
    background #87bae6
    line-height 2
  th, td
   padding .2em 1em

{$contentClass}
  background-color #fff
  code 
    color #f83929
    font-family Consolas,Monaco,'Andale Mono',monospace;
  
    .token
      &.deleted
        color #EC5975
      &.inserted
        color $accentColor 
  pre code 
    font-weight normal         

{$contentClass}


div[class*="language-"]
  .highlight-lines
    line-height 1.2
  .token.class-name
    color rgb(250, 200, 99)  
  pre, pre[class*="language-"]
    font-size 14px

.custom-block
  // .custom-block-title 
  &.details
    // border-radius 0
    // margin 0
    // padding 0
    // background-color transparent
    background-color #f6f7fb
    summary
      user-select none
      color #ff5722
p
  padding-bottom 4px
strong 
  font-weight: 700;

.orange
  color #fa8919
  font-weight bold

.flex-img 
  p
    display flex
    a:not(:last-child)
      margin-right 20px
    img
      border: 1px solid 